<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:top="2dp" android:bottom="2dp">
        <shape
            android:shape="rectangle" android:innerRadius="10dp">
            <!-- Set the border color of your layout here -->
            <solid android:color="#ff236a" />

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:right="2dp" >
        <shape
            android:shape="rectangle" >
            <!-- Set the background color of your layout here -->
            <solid android:color="#434154" />
        </shape>
    </item>

</layer-list>